pipeline {
    agent { label 'slave' }
    stages {
        stage('Checkout') {
          steps {
                sh 'rm -rf hello-world-war'
                sh 'git clone https://github.com/Rajani0206/hello-world-war.git'
            }
        }

         stage('Build') {
          steps {
               // sh 'cd hello-world-war'
                sh 'mvn clean package'
            }
        }
    stage('Deploy'){
    steps {   
    sh 'cp /opt/jenkins/workspace/Hello_World_pipeline/target/hello-world-war-1.0.0.war /opt/apache-tomcat-10.1.34'

    }
}

}
}
