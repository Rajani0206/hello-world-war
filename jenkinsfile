pipeline {
    agent { label 'slave' }
    stages {
        stage('Checkout') {
          steps {
                sh 'rm -rf hello-world-war'
                sh 'git clone https://github.com/Rajani0206/hello-world-war.git'
            }
        }

         stage('Build') {
          steps {
               // sh 'cd hello-world-war'
                sh 'mvn clean package'
            }
        }
    stage('Deploy'){
    steps {   
    sh 'cp /opt/jenkins/workspace/Hello_World_pipeline/target/hello-world-war-1.0.0.war /opt/apache-tomcat-10.1.34/webapps'

    }
}
}
    post{
    success{
    mail to: 'rajanisc15@gmail.com',
     subject: "Job is successfull",
     body: "Job is successfull, Thank yu"


 failure{
    mail to: 'rajanisc15@gmail.com',
     subject: "Job is failed",
     body: "Job is failed, Thank yu"

}
}
}
}
